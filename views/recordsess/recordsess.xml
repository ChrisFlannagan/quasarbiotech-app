<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="loaded" navigatingFrom="onNavigatingFrom"
      horizotnalAlignment="stretch" veritcalAlignment="stretch">
    <GridLayout rows="60,60,30,*">
        <Label row="0" id="timerLabel" text="3:00" horizontalAlignment="center" verticalAlignment="center" />
        <GridLayout row="1" width="100%" columns="*,*,*" height="50">
            <Button class="main-btns" id="timerBtn" text="Start Timer" horizontalAlignment="center" col="0" tap="starttimer" />
            <Button class="main-btns" text="Stop Timer" horizontalAlignment="center" col="1" tap="stoptimer" />
            <Button class="main-btns" text="Undo" horizontalAlignment="center" col="2" tap="undospot" />
        </GridLayout>
        <Label row="2" id="quadrantsLabel" horizontalAlignment="center" text="Touch Areas You Will Treat" />
        <StackLayout row="3" id="main-layout" width="100%" orientation="vertical" verticalAlignment="stretch" horizontalAlignment="stretch"
                      backgroundColor="#CCCCCC" backgroundImage="~/images/face.jpg" backgroundPosition="center" backgroundSize="contain" veritcalAlignment="stretch">
        </StackLayout>
    </GridLayout>
</Page>