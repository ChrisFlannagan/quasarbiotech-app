<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="loaded">
    <Page.actionBar>
        <ActionBar title="Quasar Companion">
            <NavigationButton text="Go Back" tap="onNavBtnTap"/>
        </ActionBar>
    </Page.actionBar>
    <StackLayout>
        <Label text="Use Two Fingers To Zoom In On Photos" horizontalAlignment="center" color="#FFF" />
        <GridLayout rows="*,120">
            <StackLayout row="0">
                <GridLayout rows="60,*,60,*">
                    <GridLayout columns="50, *, 100" row="0">
                        <Image src="~/images/capture.png" id="top-photo-capture" col="0" height="30" tap="takePhoto" row="0" />
                        <Label id="first-photo-label" col="1" horizontalAlignment="center" color="#FFF" fontSize="12" />
                        <Button id="first-photo-delete" col="2" tap="deleteOriginal" text="Delete" />
                    </GridLayout>
                    <Image row="1" id="first-photo" pinch="onPinchTop" tap="resizeBack" stretch="aspectFit" />
                    <GridLayout columns="50, *, 100" row="2">
                        <Image src="~/images/capture.png" id="bottom-photo-capture" col="0" height="30" tap="takePhoto" row="0" />
                        <Label id="select-photo-label" col="1" horizontalAlignment="center" color="#FFF" fontSize="12" />
                        <Button id="first-photo-delete" col="2" tap="deleteSelected" text="Delete" />
                    </GridLayout>
                    <Image row="3" id="select-photo" pinch="onPinchBottom" tap="resizeBack" stretch="aspectFit" />
                </GridLayout>
            </StackLayout>
            <ScrollView row="1" orientation="horizontal">
                <StackLayout class="scroll-menu" orientation="horizontal" id="all-pics"></StackLayout>
            </ScrollView>
        </GridLayout>
    </StackLayout>
</Page>