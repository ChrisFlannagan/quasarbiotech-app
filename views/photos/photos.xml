<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="loaded">
    <Page.actionBar>
        <ActionBar title="Quasar Companion">
            <NavigationButton text="Go Back" tap="onNavBtnTap"/>
        </ActionBar>
    </Page.actionBar>
    <StackLayout>
        <GridLayout rows="*,240" id="grid-filler">
            <StackLayout row="0">
                <GridLayout rows="60,*">
                    <GridLayout columns="50, *" row="0">
                        <Image src="~/images/capture.png" id="top-photo-capture" col="0" height="30" tap="takePhoto" row="0" />
                        <Label id="first-photo-label" col="1" horizontalAlignment="center" color="#FFF" fontSize="12" />
                    </GridLayout>
                    <Image row="1" id="first-photo" tap="goFull" stretch="aspectFit" />
                </GridLayout>
            </StackLayout>
            <ScrollView row="1" orientation="horizontal">
                <StackLayout class="scroll-menu" orientation="horizontal" id="all-pics"></StackLayout>
            </ScrollView>
        </GridLayout>
        <StackLayout id="full-screen-layout" tap="resizeBack" height="100%" stretch="fill" visibility="collapsed" backgroundColor="#000">
            <Button id="first-photo-delete" tap="deleteOriginal" text="Delete" />
            <Image id="select-photo" stretch="aspectFit" />
        </StackLayout>
    </StackLayout>
</Page>