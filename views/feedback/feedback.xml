<Page loaded="loaded">
    <Page.actionBar>
        <ActionBar title="Quasar Companion">
            <NavigationButton text="Go Back" tap="onNavBtnTap"/>
        </ActionBar>
    </Page.actionBar>
    <ScrollView>
        <StackLayout orientation="vertical" id="mainStack">
            <Image src="~/images/logo.png" width="200" stretch="aspectFit" horizontalAlignment="center" />
            <Label class="page-header" text="Rate App Experience" horizontalAlignment="center" />
            <GridLayout class="column" columns="40,*" tap="check1">
                <Label col="0" class="radiobutton" id="radio1" />
                <Label col="1" class="rlabel" text="Excellent" />
            </GridLayout>
            <GridLayout class="column" columns="40,*" tap="check2">
                <Label col="0" class="radiobutton" id="radio2" />
                <Label col="1" class="rlabel" text="Good" />
            </GridLayout>
            <GridLayout class="column" columns="40,*" tap="check3">
                <Label col="0" class="radiobutton" id="radio3" />
                <Label col="1" class="rlabel" text="Fair" />
            </GridLayout>
            <GridLayout class="column" columns="40,*" tap="check4">
                <Label col="0" class="radiobutton" id="radio4" />
                <Label col="1" class="rlabel" text="Poor" />
            </GridLayout>
            <TextView class="comments" hint="Please provide comments on app" height="80"></TextView>
            <Button text="Send Feedback" tap="sendFeedback" />
            <Label height="200" />
        </StackLayout>
    </ScrollView>
</Page>